{
  "name": "splitmate-backend",
  "version": "1.0.0",
  "description": "SplitMate Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:mysql": "tsx watch src/index-mysql.ts",
    "dev:postgres": "tsx watch src/index-postgres.ts",
    "dev:supabase": "tsx watch src/index-supabase.ts",
    "build": "tsc",
    "build:mysql": "tsc && cp src/index-mysql.ts dist/ && cp src/database/schema-mysql.sql dist/database/",
    "build:postgres": "tsc && cp src/index-postgres.ts dist/ && cp src/database/postgres-schema.sql dist/database/",
    "build:supabase": "tsc && cp src/index-supabase.ts dist/ && cp src/database/supabase-schema.sql dist/database/",
    "start": "node dist/index.js",
    "start:mysql": "node dist/index-mysql.js",
    "start:postgres": "node dist/index-postgres.js",
    "start:supabase": "node dist/index-supabase.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts"
  },
  "dependencies": {
    "connect-pg-simple": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "helmet": "^7.1.0",
    "mysql2": "^3.6.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.3.0"
  }
}
